<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDIT AN USER</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{user.id}}" method="post">
                        <div class="input-group mt-2">
                            <label class="input-group-text" for="name">Name</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Example: Daniel Alberto" 
                            value='{{user.name}}' autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label class="input-group-text" for="last_name">Last Name</label>
                            <input class="form-control" type="text" name="last_name" id="last_name" placeholder="Example: Vetencourt Alvarez" 
                            value='{{user.last_name}}' required>
                        </div>

                        <div class="input-group mt-2">
                            <label class="input-group-text" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="Example: Dava2310" 
                            value='{{user.username}}' required>
                        </div>

                        <div class="input-group mt-2">
                            <label class="input-group-text" for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="Example: dvetencourt23@gmail.com" 
                            value='{{user.email}}' required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>